page {
  background-color: #f0f0f0;
  height: 100%;
  width: 100%;
}

.content {
  position: relative;
  height: 100%;
}

.main-bg {
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
  height: 100%;
  width: 100%;
}

.issues-label {
  line-height: 165%;
  color: #999;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  font-size: 14px;
}

.widgets__item {
  margin-top: 12rpx;
  margin-bottom: 24rpx;
  font-size: 16px;
  background-color: #fff;
  overflow: hidden;
  cursor: pointer;
}

.widgets__info {
  display: flex;
  margin-right: 24rpx;
  margin-left: 24rpx;
  margin-top: 14rpx;
  margin-bottom: 14rpx;
  align-items: center;
  flex-direction: row;
}

.widgets__info_show .widgets__info-img {
  transform: rotate(-90deg);
}

.widgets__info_show .widgets__info-img {
  transform: rotate(-90deg);
}

.widgets__info-name {
  flex:1;
  overflow: hidden;
}

.widgets__info-name1 {
  width: 64rpx;
  height: 64rpx;
  margin-left: 12rpx;
  margin-right: 32rpx;
}

.widgets__info-img1 {
  width: 64rpx;
  height: 64rpx;
  margin-left: 12rpx;
  margin-right: 32rpx;
}

.widgets__info-img11 {
  width: 96rpx;
  height: 96rpx;
  margin-left: 16rpx;
  margin-right: 32rpx;
  border-radius: 50%;
}

.widgets__info-img5 {
  width: 72rpx;
  height: 72rpx;
  margin-left: 12rpx;
  margin-right: 32rpx;
}

.widgets__info-img55 {
  width: 32rpx;
  height: 32rpx;
  transition: transform 0.4s;
}

.widgets__info-img2 {
  transition: transform 0.4s;
}

.widgets__info-img2 {
  height: 64rpx;
  width: 64rpx;
}

.widgets__info-img3 {
  font-size: 28rpx
}

.widgets__info-img {
  width: 32rpx;
  height: 32rpx;
  transition: transform 0.4s;
  transform: rotate(90deg);
}

.widgets__info-img11 {
  width: 32rpx;
  height: 32rpx;
  transition: transform 0.4s;
}

.widgets__list {
  display: none;
}

.widgets__list .phoneText {
  float: right;
  margin-right: 22px;
  color: #515151;
}

.widgets__list_show {
  display: block;
}

.widget {
  position: relative;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  padding-left: 30rpx;
  padding-right: 50rpx;
}

.widget__arrow {
  position: absolute;
  top: 5rpx;
  right: 44rpx;
  width: 32rpx;
  height: 32rpx;
}

.widget__line {
  content: " ";
  position: absolute;
  left: 40rpx;
  top: 0;
  right: 0;
  height: 2rpx;
  background-color: #f0f0f0;
}

.widget__line_first {
  left: 0;
  right: 0;
  background-color: #d8d8d8;
}

.flex {
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  display: flex;
}

.item-left {
  padding-right: 5rpx;
}


.flex1 {
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  display: flex;
  font-weight:bold;
}