.money {
  width: 72rpx;
  height: 72rpx;
  float: right;
  margin: 24rpx;
}
.play {
  position: fixed;
  width: 100%;
}

.page {
  height: 100%;
  min-height: 100%;
  color: #fff;
  font-family: "Microsoft Yahei", "宋体";
  font-size: 14px;
}

.content {
  position: relative;
  height: 100%;
}

.main-bg {
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
  height: 100%;
  width: 100%;
}

.weather {
  font-size: 50px;
  text-align: center;
}

.PM {
  color: navy;
  padding-top: 15rpx;
  font-size: 32px;
  text-align: center;
}

.calendarSign {
  color: white;
  padding: 150rpx;
}

.flex {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.item-middle {
  flex: 1;
  overflow: hidden;
}

.item-top image {
  margin-top: 200rpx;
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
}

.item-down1 {
  padding-top: 31rpx;
  text-align: center;
}
